<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cambio_password">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlb_cambio_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/cambio_corso"
        app:titleTextColor="@color/richiamo_azione"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_passwor_attuale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_passwor_attuale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail istituzionale"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_nuova_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nuova_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail istituzionale"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_conferma_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_conferma_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail istituzionale"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>




</LinearLayout>