<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margine_bordi_laterali"
    android:backgroundTint="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_mittente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da nome studente"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_data_richiesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/02/2023"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_oggetto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oggetto: qualcosa da"/>

    <TextView
        android:id="@+id/txt_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="una descrizione cuyhbec chbc uib dhebc ciub ecb "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_archivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:text="@string/elimina"
            android:textColor="@color/richiamo_azione"
            app:strokeWidth="1dp"
            app:strokeColor="@color/richiamo_azione"
            app:rippleColor="@color/ripple_color"
            app:icon="@drawable/ic_elimina"
            app:iconTint="@color/richiamo_azione"
            app:iconSize="23dp"
            app:iconGravity="textStart"
            android:layout_weight="2"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rispondi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:text="@string/rispondi"
            android:textColor="@color/richiamo_azione"
            app:strokeWidth="1dp"
            app:strokeColor="@color/richiamo_azione"
            app:rippleColor="@color/ripple_color"
            app:icon="@drawable/ic_invio_email"
            app:iconTint="@color/richiamo_azione"
            app:iconSize="23dp"
            app:iconGravity="textStart"
            android:layout_weight="2"

            />



    </LinearLayout>



</LinearLayout>